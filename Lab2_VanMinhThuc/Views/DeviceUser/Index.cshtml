@model IEnumerable<Lab2_VanMinhThuc.Models.DeviceUser>

@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               User Name
            </th>
            <th>
User Email            </th>
            <th>
                User Phone
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @item.User_ID
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Phone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.User_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.User_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.User_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
